{
  "extends": ["tslint:recommended"],
  "rules": {
    "arrow-parens": [false],
    "no-console": [false],
    "no-default-export": true,
    "semicolon": [true, "never"],
    "triple-equals": [true, "allow-undefined-check"],
    "max-classes-per-file": [false],
    "interface-name": [false],
    "interface-over-type-literal": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "always",
          "typeLiterals": "ignore"
        }
      }
    ]
  }
}
